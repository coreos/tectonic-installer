resource "openstack_compute_secgroup_v2" "master" {
  name        = "${var.cluster_name}_k8s_master_group"
  description = "security group for k8s masters: SSH and https"

  rule {
    from_port   = 22
    to_port     = 22
    ip_protocol = "tcp"
    cidr        = "0.0.0.0/0"
  }

  rule {
    from_port   = 443
    to_port     = 443
    ip_protocol = "tcp"
    cidr        = "0.0.0.0/0"
  }

  rule {
    from_port   = -1
    to_port     = -1
    ip_protocol = "icmp"
    cidr        = "0.0.0.0/0"
  }
}

resource "openstack_compute_secgroup_v2" "worker" {
  name        = "${var.cluster_name}_k8s_worker_group"
  description = "security group for k8s masters: SSH and https"

  rule {
    from_port   = 22
