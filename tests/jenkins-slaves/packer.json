{
  "variables": {
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "ami-7b4d7900",
      "instance_type": "m4.xlarge",
      "ssh_username": "ubuntu",
      "ami_name": "tectonic-installer-jenkins-slave-1",
      "tags": {
        "Name": "Tectonic-Installer-Jenkins-Slave",
        "Owner": "tectonic-installer",
        "jenkins_slave_type": "demand_EC2 Ubuntu",
        "expirationDate": "never",
        "jenkins": "tectonic-installer"
      },
      "launch_block_device_mappings": [
      {
        "device_name": "/dev/sda1",
        "volume_size": 100,
        "volume_type": "gp2",
        "delete_on_termination": true
      }
      ]
    }
  ],

  "provisioners": [
      {
      "type": "shell",
      "script": "scripts/install-tools.sh",
      "execute_command": "{{ .Vars }} sudo -E '{{ .Path }}'"
    }
  ]
}
