{
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "comma-dangle": [2 , "always-multiline"],
    "consistent-this": [1, "self"],
    "curly": [2],
    "default-case": [2],
    "dot-notation": [1],
    "eqeqeq": [2],
    "guard-for-in": [2],
    "indent": [2, 2],
    "linebreak-style": [2, "unix"],
    "max-nested-callbacks": [1, 3],
    "no-alert": [2],
    "no-caller": [2],
    "no-console": [0],
    "no-constant-condition": [0],
    "no-else-return": [2],
    "no-eval": [2],
    "no-lone-blocks": [2],
    "no-multi-spaces": [2],
    "no-nested-ternary": [2],
    "no-self-compare": [2],
    "no-sequences": [2],
    "no-shadow": [1],
    "no-sync": [1],
    "no-throw-literal": [2],
    "no-trailing-spaces": [2],
    "no-underscore-dangle": [0],
    "no-use-before-define": [1],
    "no-useless-call": [2],
    "no-unused-vars": [2, {"argsIgnorePattern": "^_"}],
    "no-void": [2],
    "no-with": [2],
    "radix": [2],
    "semi": [2, "always"],
    "space-infix-ops": [0], // To allow for fn(arg=val) with no spaces around the "="
    "strict": [2, "global"],
    "vars-on-top": [2],
    "react/prop-types": [0]
  },
  "settings": {
    "ecmascript": 6
  },
  "plugins": [
    "react"
  ]
}
