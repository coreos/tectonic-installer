load("@io_bazel_rules_go//go:def.bzl", "go_library")

go_library(
    name = "go_default_library",
    srcs = [
        "binary.go",
        "common.go",
    ] + select({
        "@io_bazel_rules_go//go/platform:darwin": [
            "common_darwin.go",
            "common_unix.go",
        ],
        "@io_bazel_rules_go//go/platform:freebsd": [
            "common_freebsd.go",
            "common_unix.go",
        ],
        "@io_bazel_rules_go//go/platform:linux": [
            "common_linux.go",
            "common_unix.go",
        ],
        "@io_bazel_rules_go//go/platform:openbsd": [
            "common_openbsd.go",
            "common_unix.go",
        ],
        "@io_bazel_rules_go//go/platform:windows": [
            "common_windows.go",
        ],
        "//conditions:default": [],
    }),
    importpath = "github.com/shirou/gopsutil/internal/common",
    visibility = ["//installer/vendor/github.com/shirou/gopsutil:__subpackages__"],
    deps = select({
        "@io_bazel_rules_go//go/platform:darwin": [
            "//installer/vendor/golang.org/x/sys/unix:go_default_library",
        ],
        "@io_bazel_rules_go//go/platform:freebsd": [
            "//installer/vendor/golang.org/x/sys/unix:go_default_library",
        ],
        "@io_bazel_rules_go//go/platform:openbsd": [
            "//installer/vendor/golang.org/x/sys/unix:go_default_library",
        ],
        "@io_bazel_rules_go//go/platform:windows": [
            "//installer/vendor/github.com/StackExchange/wmi:go_default_library",
            "//installer/vendor/golang.org/x/sys/windows:go_default_library",
        ],
        "//conditions:default": [],
    }),
)
