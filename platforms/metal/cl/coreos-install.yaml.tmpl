---
systemd:
  units:
    - name: installer.service
      enable: true
      contents: |
        [Unit]
        Requires=network-online.target
        After=network-online.target
        [Service]
        Type=simple
        ExecStart=/opt/installer
        [Install]
        WantedBy=multi-user.target
storage:
  files:
    - path: /opt/installer
      filesystem: root
      mode: 0500
      contents:
        inline: |
          #!/bin/bash -ex
          curl "{{.ignition_endpoint}}?{{.request.raw_query}}&os=installed" -o ignition.json
          coreos-install -d /dev/sda -C {{.coreos_channel}} -V {{.coreos_version}} -i ignition.json {{if index . "baseurl"}}-b {{.baseurl}}{{end}}
          udevadm settle
          systemctl reboot
passwd:
  users:
    # intentionally not creating 'core' user so terraform does not SSH during install
    - name: debug
      create:
        groups:
          - sudo
          - docker
      ssh_authorized_keys:
        - {{.ssh_authorized_key}}
{{if gt (len .append_configs) 0}}
ignition:
  config:
    append: {{range .append_configs}}
      - source: "{{.}}"
{{end}}
