---
systemd:
  units:
    - name: etcd-member.service
      enable: {{.etcd_enabled}}
      dropins:
        - name: 40-etcd-cluster.conf
          contents: {{.ign_etcd_dropin_json}}
    - name: docker.service
      enable: true
      dropins:
        - name: 10-dockeropts.conf
          contents: {{.ign_docker_dropin_json}}
    - name: locksmithd.service
      mask: true
  files:
    - path: /etc/hostname
      filesystem: root
      mode: 0644
      contents:
        inline:
          {{.domain_name}}
    - path: /etc/sysctl.d/max-user-watches.conf
      filesystem: root
      mode: 0644
      contents:
        inline: {{.ign_max_user_watches_json}}
passwd:
  users:
    - name: core
      ssh_authorized_keys:
        - {{.ssh_authorized_key}}
